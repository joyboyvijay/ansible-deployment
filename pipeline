pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout Ansible Repo') {
            steps {
                // Clean workspace to avoid path conflicts
                deleteDir()
                git branch: 'main',
                    credentialsId: 'vijaypassid',
                    url: 'https://github.com/joyboyvijay/ansible-deployment.git'
            }
        }

        stage('Checkout Website Repo') {
            steps {
                dir('web-src') {
                    git branch: 'main',
                        credentialsId: 'vijaypassid',
                        url: 'https://github.com/joyboyvijay/webfiles.git'
                }
            }
        }

        stage('Sanity: Show Workspace') {
            steps {
                sh 'pwd && echo "--- ROOT ---" && ls -la && echo "--- web-src ---" && ls -la web-src || true'
                sh 'ansible --version || true'
            }
        }

        stage('Deploy with Ansible') {
            steps {
                // If your ubuntu user needs a sudo password, uncomment and configure:
                // withCredentials([string(credentialsId: 'becomePassId', variable: 'BECOME_PASS')]) {
                //     ansiblePlaybook(
                //         playbook: 'deploy.yml',
                //         inventory: 'hosts.ini',  // change to 'inventory/hosts.ini' if that's your path
                //         colorized: true,
                //         credentialsId: 'vijaysshid',
                //         extraVars: [
                //             web_src: "${WORKSPACE}/web-src",
                //             ansible_become_password: "${BECOME_PASS}"
                //         ],
                //         extras: '-vvv'
                //     )
                // }

                // Default: passwordless sudo (recommended)
                ansiblePlaybook(
                    playbook: 'deploy.yml',
                    inventory: 'hosts.ini',            // <-- adjust if yours is 'inventory/hosts.ini'
                    colorized: true,
                    credentialsId: 'vijaysshid',       // SSH key for the target hosts
                    extraVars: [
                        web_src: "${WORKSPACE}/web-src"
                    ],
                    extras: '-vvv'                     // extra verbosity for debugging
                )
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/ansible.log', onlyIfSuccessful: false
        }
    }
}
